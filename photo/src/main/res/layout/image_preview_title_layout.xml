<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/rl_image_preview_title"
    android:background="#f1f1f1">

    <com.wiser.photo.weight.SquaredImageView
        android:id="@+id/iv_image_preview_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:padding="13dp"
        android:layout_centerVertical="true"
        android:src="@drawable/photo_back_black_arrow" />

    <TextView
        android:id="@+id/tv_image_preview_count"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="#000000"
        android:layout_centerVertical="true"
        android:singleLine="true"
        android:text="2/5"/>

    <com.wiser.photo.weight.SquaredImageView
        android:id="@+id/iv_image_preview_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="12dp"
        android:adjustViewBounds="true"
        android:background="@drawable/photo_preview_delete_icon"
        android:padding="11dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>

</RelativeLayout>