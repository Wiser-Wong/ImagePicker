<?xml version="1.0" encoding="utf-8"?>
<com.wiser.photo.weight.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.wiser.photo.weight.SquaredImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@mipmap/photo_add_icon"
        android:adjustViewBounds="true"
        android:padding="5dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80ffffff"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"/>

</com.wiser.photo.weight.SquareFrameLayout>