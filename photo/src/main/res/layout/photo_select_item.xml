<?xml version="1.0" encoding="utf-8"?>
<com.wiser.photo.weight.SquareFrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#363636"
    android:layout_margin="1dp">

    <com.wiser.photo.weight.SquaredImageView
        android:id="@+id/iv_select_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@mipmap/photo_error"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.wiser.photo.weight.SquareFrameLayout
        android:id="@+id/fl_cover"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true"
        android:background="#99CCCCCC"
        android:visibility="gone"/>

    <com.wiser.photo.weight.SquaredImageView
        android:id="@+id/iv_photo_select_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:adjustViewBounds="true"
        android:padding="8dp"
        android:layout_gravity="end"
        android:background="@mipmap/photo_unselected" />

</com.wiser.photo.weight.SquareFrameLayout>